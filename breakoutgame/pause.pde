void pause() { //========================================
  tactile(30, 30, 35);
   strokeWeight(3);
   stroke(0);
  circle(30, 30, 45);
  
   fill(0);
  textSize(60);
   text(">", 33, 18);
   fill(255);
  textSize(100);
   text("PAUSE", 400, 300);
} //=======================================================

void pauseClicks() { //====================================
   if (dist(mouseX, mouseY, 30, 30) < 20) {
    mode = GAME;
  }
} //=======================================================
